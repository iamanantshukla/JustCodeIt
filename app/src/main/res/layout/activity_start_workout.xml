<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StartWorkout">

    <TextView
        android:id="@+id/title_tv"
        android:gravity="start"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/title_tv"
        android:textSize="22sp"
        android:textColor="@color/bg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:layout_constraintVertical_bias="0.181">

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/proxima"
            android:gravity="start"
            android:text="@string/title_tv"
            android:paddingBottom="10dp"
            android:textColor="@color/grey_unselected"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    </ScrollView>

    <View
        android:id="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="41dp" />


    <TextView
        android:id="@+id/next"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/floating_button"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:text="@string/Next"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat"
        android:fontFamily="@font/proxima"/>

    <TextView
        android:id="@+id/pause"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/floating_button"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:text="@string/pause"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat"
        android:fontFamily="@font/proxima"/>

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:fontFamily="@font/proxima"
        android:text="@string/timer_initial"
        android:textColor="@color/bg"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/exerciseNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:textColor="@color/bg"
        android:text="@string/exerciseNumber"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima"/>


</androidx.constraintlayout.widget.ConstraintLayout>