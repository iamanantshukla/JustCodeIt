<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yogacommunity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Settings" android:theme="@style/AppTheme.myActivity"/>
        <activity
            android:name=".AppHomePage"
            android:theme="@style/AppTheme.myActivity" />
        <activity
            android:name=".Details"
            android:theme="@style/AppTheme.myActivity" />
        <activity
            android:name=".StartWorkout"
            android:theme="@style/AppTheme.myActivity" />
        <activity
            android:name=".Beginner"
            android:theme="@style/AppTheme.myActivity" />
        <activity
            android:name=".AddingPost"
            android:theme="@style/AppTheme.myActivity" />
        <activity
            android:name=".Community_Home"
            android:theme="@style/AppTheme.myActivity" />
        <activity android:name=".StartupSetup" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>